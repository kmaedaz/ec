{% extends 'default_frame.twig' %}

{% set menus = ['customer', 'customer_master'] %}

{% block title %}会員管理{% endblock %}
{% block sub_title %}寄付金入金照会{% endblock %}

{% block main %}

<!--寄付金入金照会-->
<div class="row">
  <div class="col-md-12">
    <div class="box">
      <div class="box-header with-arrow">
        <h3 class="box-title">会員名 <span class="normal"> <a href="{{ url('admin_customer_edit', { 'id': Customer.id}) }}">{{ Customer.name01 }}&nbsp;{{ Customer.name02 }}</a></span></h3>
      </div><!-- /.box-header -->
      <div class="box-body">
        <div class="table_list">
	        <div class="table-responsive with-border">
	            <table class="table table-striped">
	                <thead>
	                <tr>
	                    <th>寄付名</th>
	                    <th>入金日</th>
	                    <th>支払方法</th>
	                    <th>入金額</th>
	                </tr>
	                </thead>
	                <tbody>
	                {% for contributionOrder in contributionOrders %}
	                <tr>
	                    <td><a href="{{ url('admin_order_edit', { 'id' : contributionOrder[3] }) }}">{{contributionOrder[0]}}</a></td>
	                    <td>{{contributionOrder[2]}}</td>
	                    <td>{{contributionOrder[1]}}</td>
	                    <td>{{contributionOrder[4]|price}}</td>
	                </tr>
	                {% endfor %}
	                </tbody>
	            </table>
	        </div>
        </div>
      </div><!-- /.box-body -->
    </div><!-- /.box -->
  </div><!-- /.col -->
</div>
{% endblock %}
